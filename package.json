{
  "name": "payment-gateway",
  "version": "1.0.0",
  "description": "A Payment Gateway integration project",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app.js",
    "migrate": "npx sequelize-cli db:migrate",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/partha7278/Payment-Gateway.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/partha7278/Payment-Gateway/issues"
  },
  "homepage": "https://github.com/partha7278/Payment-Gateway#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2",
    "underscore": "^1.13.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^7.29.0",
    "jest": "^27.0.5",
    "nodemon": "^2.0.7"
  }
}
